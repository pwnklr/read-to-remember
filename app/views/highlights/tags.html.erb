<div class="container">
  <p><%= link_to "All highlights", highlights_path, style: "color:white;" %></p>
  <h1 style="color:white;"><%= @tag %></h1>
    <div class="row">
      <% @tagged_highlights.each do |h| %>
      <div class="card">
        <h3><%= h.source.title %> by</h3>
        <h5><%= h.source.author.name %></h5>
        <p><%= h.content %></p>
        <p class="page">Page <%= h.page %></p>
        <div class="icons">
          <div class="sent">
            <% if current_user.favorited?(h) %>
              <p>
                <%= link_to unfav_highlight_path(h) do %>
                  <i class="fas fa-heart"></i>
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to fav_highlight_path(h) do %>
                  <i class="far fa-heart"></i>
                <% end %>
              </p>
            <% end %>
            <% if h.h_note.nil? || h.tag_list.blank? %>
            <p>
              <%= link_to edit_highlight_path(h) do %>
                <i class="fas fa-pen"></i>
              <% end %>
            </p>
            <% end %>
            <p>
              <%= link_to unfav_highlight_path(h) do %> <!-- build this one -->
                <i class="fas fa-paper-plane"></i>
              <% end %>
            </p>
          </div>
          <div class="delete">
            <p><%= link_to '', h, method: :delete, data: {confirm: "Are you sure?"} %><i class="far fa-trash-alt"></i></p>
          </div>
        </div>
        <% if h.my_note %>
          <div class="card">
            <p><%= h.h_note %></p>
            <% h.tag_list.each do |t| %>
              <p><%= link_to "#{t}", tags_highlights_path(t) %></p>
            <% end %>
            <br>
            <p>
              <%= link_to edit_highlight_path(h) do %>
                <i class="fas fa-pen"></i>
              <% end %>
            </p>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
</div>
