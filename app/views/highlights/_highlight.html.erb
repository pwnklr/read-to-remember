<div class="card card-adjusted" id='<%= "note-#{@highlight.id}" %>'>
        <h3 style="font-size: 12px; font-weight: bold; font-family: Spartan"><%= link_to @highlight.source.title, source_path(@highlight.source) %></h3>
        <h5 style="color: #797C80; margin-bottom:25px; font-size: 12px; font-weight: 400;"><%= @highlight.source.author.name %></h5>
        <p><%= @highlight.content %></p>
        <p class="page">Page <%= @highlight.page %></p>
        <!-- -->
        <% if @highlight.my_note.present? %>
          <div class="card-note" style="width: 100%; padding-bottom: 12px;">
            <p style="font-weight: 600; color: #898AA6; font-size:12px; margin: 0;">Notes</p>
            <p style="font-weight: 300; font-size:14px; color: #13154E; margin: 0; font-family: Roboto;"><%= @highlight.h_note %></p>
            <div style="display: flex; flex-wrap: wrap;">
              <p style="font-size: 12px; font-weight: 300; font-height:0; color: #13154E; font-family: Roboto;"><% @highlight.tag_list.each do |t| %></p>
                <p style="font-weight: 300; padding-left: .5vw; font-size:12px; margin:0;"><%= link_to "#{t}", tags_highlights_path(t), style: "color:#25265B;"%></p>
              <% end %>
            </div>
          </div>
        <% end %>

       <div id="<%= @highlight.id %>" style="display: none;"></div>

<%#= link_to "Click to download",  asset_path("/data/Here_goes_file_name.md"), download: "Here_goes_file_name.md" %>

        <div class="icons">
          <div class="sent">
            <% if current_user.favorited?(@highlight) %>
              <p>
                <%= link_to unfav_highlight_path(@highlight), method: :put, remote: true do %>
                  <i id='f-<%= @highlight.id %>' onclick=changeHeart(this) title='Unfavorite' class="fas fa-heart" style="font-size:16px;color:#555555;" ></i>
                <% end %>

              </p>
            <% else %>
              <p>
                <%= link_to fav_highlight_path(@highlight), method: :put, remote: true do %>
                  <i onclick=changeHeart(this) title='Favorite' class="far fa-heart" style="font-size:16px;color:#aaa;"></i>
                <% end %>
              </p>
            <% end %>
          <!-- render form -->
            <p>
              <%= link_to edit_highlight_path(@highlight), remote: true do %>
                <i class="fas fa-pen edit-icon" title='Write/update note' data-id="<%= @highlight.id %>" style="font-size:16px;color:#AAAAAA;"></i>
              <% end %>
            </p>
            <p>
              <%= link_to export_highlight_path(@highlight), remote: true do %> <!-- improve this one :export -->
                <i onclick=showAlert() class="fas fa-paper-plane" title='Export' style="font-size:16px;color:#AAAAAA;"></i>
              <% end %>
            </p>
          </div>
          <div class="delete">
            <p><%= link_to @highlight, method: :delete, data: {confirm: "Are you sure?"}, remote: true do %>
              <i class="far fa-trash-alt" title='Delete' style="font-size:16px;color:#AAAAAA;"></i></p>
            <% end %>
          </div>
        </div>
      </div>

