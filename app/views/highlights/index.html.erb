<p><%= link_to "My favorites", favorites_highlights_path %></p>
<p><%= link_to "My flashcards", flashcards_highlights_path %></p>
<h1>All highlights (<%= @highlights.count %>)</h1>
<% @highlights.each do |h| %>
  <h3><%= h.source.author.name %></h3>
  <p><%= h.source.title %></p>
  <p><%= h.content %></p>
  <p>page <%= h.page %></p>
  <!-- make partial file for all links and render it -->
  <div style="display:flex; flex-direction: row;">
    <% if @user.favorited?(h) %>
      <p><%= link_to '💙', unfav_highlight_path(h) %></p>
    <% else %>
      <p><%= link_to '💔', fav_highlight_path(h)  %></p>
    <% end %>
    <p><%= link_to '🗑️', h, method: :delete, data: {confirm: "Are you sure?"} %></p>
  </div>
<% end %>
