<div class="container" style="padding: 15px;">
<!-- Ilona, make this pretty :P-->
  <div style="padding-left: 20px; padding-top: 30px; padding-bottom: 10px;">

    <%= form_tag highlights_path, class: "form-inline-sm search", method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control-sm",
        placeholder: "Search"
      %>
      <%= submit_tag "Read", class: "form-control-sm search-btn"%>
    <% end %>
  </div>
  <% if @query %>
    <p style="color: #fff; padding-left: 15px;">We found <%= pluralize @count, 'result' %> for <%= @query.upcase %>!</p>
  <% end %>
</div>

<%= render 'highlights/highlight_card', highlights: @highlights %>
