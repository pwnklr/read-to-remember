<div style="position: fixed; z-index:900; top: 0vh; width: 100%; padding: 5px 0;background: linear-gradient(180deg, #25265b 10%, #4013a2 100%);">
  <div class="nav-filter" style="padding-left: 23px; padding-top: 20px;"> <!-- articles -->
    <div style="border-radius: 24px; margin-bottom: 10px; color: white;">
    <%= form_tag articles_sources_path, :method => "get" do %>
      <%= select_tag(:select_a, options_for_select([["Sort by Date", 1], ["Sort by Author", 2], ["Sort by Title", 3]]), {class: 'filter-input'}) %>
      <%= submit_tag "Sort", :name => nil, style: "opacity: 70%; display-flex; background-color:rgba(126,68,255,1); border:none; font-weight: 300; margin-left: 10px; padding: 2px 17px; color: white; border-radius: 24px;" %>
    <% end %>
    </div>
  </div>
</div>
<%= render 'sources/navigation' %>
<div class="container" style="padding-bottom: 20px; padding-top: 130px; min-height: 100vh;">
  <div style="display:flex; flex-wrap: wrap;">
    <% @all_tags.each do |t| %>
    <% font_size= 'font-size: 16px;' if t.taggings_count == 2 %>
    <% font_size= 'font-size: 20px;' if t.taggings_count == 3 %>
    <% font_size= 'font-size: 24px;' if t.taggings_count == 4 %>
    <% font_size= 'font-size: 28px;' if t.taggings_count == 5 %>
    <% font_size= 'font-size: 32px;' if t.taggings_count == 6 %>
     <p class="tags" style="border-style: solid; border-width: 0; border-radius: 30px; font-size: 15px; padding: 1vh 2vh; color: white; background-color: #7E44FF; font-weight: bolder; margin-left: 1vh; opacity: 70%; box-shadow: 0px 4px 4px rgba(8, 13, 60, 0.09);"><%= link_to t.name, tags_highlights_path(t.name), class: "tag", style: "color: white; padding-right: 1vh; font-size: 15px; #{font_size}"%>(<%= t.taggings_count %>)</p>
    <% end %>
  </div>
</div>

