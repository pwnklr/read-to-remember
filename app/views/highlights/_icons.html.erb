<div class="icons">
    <% if current_user.favorited?(h) %>
      <p>
        <%= link_to unfav_highlight_path(h), id: "unfav",  method: :put, remote: true  do %>
          <i onclick=changeHeart(this) title='Unfavorite' class="fas fa-heart flashcard-button"></i>
        <% end %>
      </p>
    <% else %>
      <p>
        <%= link_to fav_highlight_path(h), id: "fav", method: :put, remote: true  do %>
          <i onclick=changeHeart(this) title='Favorite' class="far fa-heart flashcard-button"></i>
        <% end %>
      </p>
    <% end %>
    <!-- render form -->
      <p>
        <%= link_to edit_highlight_path(h), id: "edit", remote: true do %>
          <i class="fas fa-pen flashcard-button" title='Write/update note'></i>
        <% end %>
      </p>
    <p>
      <%= link_to export_highlight_path(h), id: "export", remote: true do %> <!-- build this one :share -->
        <i class="fas fa-paper-plane flashcard-button" title='Export'></i>
      <% end %>
    </p>

  <div class="delete">
    <p><%= link_to h, method: :delete, data: {confirm: "Are you sure?"} do %>
      <i class="far fa-trash-alt flashcard-button" title='Delete'></i></p>
    <% end %>
  </div>
</div>

<script>
 function changeHeart(_this) {
    if (_this.classList.contains('far')) {
      _this.classList.remove('far');
      _this.classList.add('fas');
      _this.title = 'Unfavorite';
    } else {
      _this.classList.remove('fas');
      _this.classList.add('far');
      _this.title = 'Favorite';
    }
  }
</script>
