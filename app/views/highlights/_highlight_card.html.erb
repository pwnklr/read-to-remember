<div class="container" style="margin: 15px;">
  <div class="row">
    <% highlights.each do |h| %>
      <div class="card card-adjusted" id='<%= "note-#{h.id}" %>'>
        <h3 style="font-size: 12px; font-weight: bold; font-family: Spartan"><%= link_to h.source.title, source_path(h.source) %></h3>
        <h5 style="color: #797C80; margin-bottom:25px; font-size: 12px; font-weight: 400;"><%= h.source.author.name %></h5>
        <p><%= h.content %></p>
        <p class="page">Page <%= h.page %></p>
        <!-- -->
        <% if h.my_note.present? %>
          <div class="card-note" style="width: 100%; padding-bottom: 12px;">
            <p style="font-weight: 600; color: #898AA6; font-size:12px; margin: 0;">Notes</p>
            <p style="font-weight: 300; font-size:14px; color: #13154E; margin: 0; font-family: Roboto;"><%= h.h_note %></p>
            <div style="display: flex; flex-wrap: wrap;">
              <p style="font-size: 12px; font-weight: 300; font-height:0; color: #13154E; font-family: Roboto;"><% h.tag_list.each do |t| %></p>
                <p style="font-weight: 300; padding-left: .5vw; font-size:12px; margin:0;"><%= link_to "#{t}", tags_highlights_path(t), style: "color:#25265B;"%></p>
              <% end %>
            </div>
          </div>
        <% end %>

       <div id="<%= h.id %>" style="display: none;"></div>

      <%= link_to "download",  asset_path("/data/read_to_remember_#{current_user.id}.md"), download: "read_to_remember.md", id: 'dwnld', style: 'display: none;' %>

        <div class="icons">
          <div class="sent">
            <% if current_user.favorited?(h) %>
              <p>
                <%= link_to unfav_highlight_path(h), method: :put, remote: true do %>
                  <i id='f-<%= h.id %>' onclick=changeHeart(this) title='Unfavorite' class="fas fa-heart" style="font-size:16px;color:#555555;" ></i>
                <% end %>

              </p>
            <% else %>
              <p>
                <%= link_to fav_highlight_path(h), method: :put, remote: true do %>
                  <i onclick=changeHeart(this) title='Favorite' class="far fa-heart" style="font-size:16px;color:#aaa"></i>
                <% end %>
              </p>
            <% end %>
          <!-- render form -->
            <p>
              <%= link_to edit_highlight_path(h), remote: true do %>
                <i class="fas fa-pen edit-icon" title='Write/update note' data-id="<%= h.id %>" style="font-size:16px;color:#AAAAAA;"></i>
              <% end %>
            </p>
            <p>
              <%= link_to export_highlight_path(h), remote: true do %> <!-- improve this one :export -->
                <i onclick=showAlert() class="fas fa-paper-plane" title='Export' style="font-size:16px;color:#AAAAAA;"></i>
              <% end %>
            </p>
          </div>
          <div class="delete">
            <p><%= link_to h, method: :delete, data: {confirm: "Are you sure?"}, remote: true do %>
              <i class="far fa-trash-alt" title='Delete' style="font-size:16px;color:#AAAAAA;"></i></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id='myAlert' class="alert alert-warning alert-dismissible fade show m-1" style='display:none;'>
  Yay! Highlight was succsesfully exported!
  <button type="button" class="close" onclick=closeIt()>
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<script>
  function changeHeart(_this) {
    const location = window.location.href; //change location for production => https://www.readtoremember.xyz/highlights/favorites
    if (location == 'http://localhost:3000/highlights/favorites') {
      const id = _this.id.replace('f-', '');
      document.getElementById('note-' + id).remove();
    } else {
      if (_this.classList.contains('far')) {
        _this.classList.remove('far');
        _this.classList.add('fas');
        _this.title = 'Unfavorite';
        _this.style.color = '#555555';
      } else {
        _this.classList.remove('fas');
        _this.classList.add('far');
        _this.title = 'Favorite';
        _this.style.color = '#aaa';
      }
    }
  }

  function showAlert() {
    setTimeout(function(){
      document.getElementById('dwnld').click();
      document.getElementById('myAlert').style.display = 'inherit';
    }, 900 )
  }

  function closeIt() {
    document.getElementById('myAlert').style.display = 'none';
  }
</script>
